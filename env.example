# Firebase Configuration
REACT_APP_FIREBASE_API_KEY=your_api_key_here
REACT_APP_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your_project_id
REACT_APP_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
REACT_APP_FIREBASE_APP_ID=your_app_id
REACT_APP_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Application Settings
REACT_APP_ENV=development
PORT=3001

# Optional: Enable debug logging in development
REACT_APP_DEBUG=true

# Optional: Email sending
# If using EmailJS (client-side) set your public key, service id and template id
REACT_APP_EMAILJS_PUBLIC_KEY=your_emailjs_public_key
REACT_APP_EMAILJS_SERVICE_ID=your_emailjs_service_id
REACT_APP_EMAILJS_TEMPLATE_ID=your_emailjs_template_id

# Optional: Use server-side email trigger (Firebase mail collection) instead of EmailJS
REACT_APP_USE_FIREBASE_TRIGGER_EMAIL=false
REACT_APP_EMAIL_FUNCTION_URL=

# Paystack Payment Gateway (Required for payment processing)
REACT_APP_PAYSTACK_PUBLIC_KEY=your_paystack_public_key
PAYSTACK_SECRET_KEY=your_paystack_secret_key

# Firebase Emulator (Optional - set to 'true' in development to use emulators)
REACT_APP_USE_FIREBASE_EMULATORS=false
